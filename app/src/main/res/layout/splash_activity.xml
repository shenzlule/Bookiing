<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:id="@+id/rc1"
        android:layout_marginTop="100dp"
        android:background="@drawable/katonga"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Book Your Rooms @ UMU Hostels"
            android:layout_centerInParent="true"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textSize="35sp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rc1"
        android:layout_marginTop="50dp"
        android:orientation="vertical"
        android:id="@+id/l1"
        android:layout_marginLeft="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="•No cancellation fee"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="•No extra charges"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="20sp"
           />
        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="•24/7 Customer Support"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="5dp"
            android:layout_height="wrap_content"
            android:text="•Safe Bookings And payments"
            android:layout_centerInParent="true"
            android:textColor="@color/black"
            android:textSize="20sp"
            />

    </LinearLayout>

    <Button
        android:id="@+id/splash_btn"
        android:layout_below="@id/l1"
        android:backgroundTint="@color/black"
        android:layout_width="match_parent"
        android:textColor="@color/white"
        android:background="@drawable/rounded_button_slpash"
        android:layout_marginTop="65dp"
        android:layout_marginHorizontal="100dp"
        android:layout_height="wrap_content"
        android:text="BOOK Now →"/>


    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:text="Terms,conditions and privacy policy"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:textSize="10sp"
        />
</RelativeLayout>